{% extends 'base.html.twig' %}

{% block title %}reservation{% endblock %}

{% block content %}
    {% if not app.user %}

        <div class="container">
            <div class="card-panel red darken-2 white-text center-align text-lighten-5">
                {% trans %} You must be logged in to book a trip ! {% endtrans %}
            </div>
        </div>
    {% else %}
        <div class="container mt-1">
            <nav>
                <div class="nav-wrapper">
                    <div class="col s12">
                        <a href="#" class="breadcrumb pl-1">> {% trans %} Travel {% endtrans %} > </a>
                    </div>
                </div>
            </nav>
        </div>
    {% endif %}
    <div class="container">

        <h1 class="center-align mt-1 "> {% trans %}Your reservation {% endtrans %}</h1>
        <div class="row">
            <div class="col pad l6 center-align">
                <img class="img-100 mt-1" src="{{ stay.travel.pictures.get(0).picturename }}"
                     alt="stay.travel.pictures.get(0).name }}">
                <h3 class="mt-1">
                    {{ stay.depature }} -> {{ stay.arrival }}
                </h3>
                <p>{% trans %} Depature at  {% endtrans %}
                    <strong>{{ stay.starDate |  format_datetime('full', 'none', locale='fr') }}</strong></p>
                <p>{% trans %} Arrival at  {% endtrans %}
                    <strong>{{ stay.endDate |  format_datetime('full', 'none', locale='fr') }}</strong></p>
            </div>
            <div class="col pad l6">
                <h2>{{ stay.travel.name }}</h2>
                <h2>{{ stay.travel.subtitle }}</h2>
                <div class="descriptions">
                    <p>{{ stay.travel.descriptions | raw }}</p>
                </div>
                <div class="center-align">
                        <span> {% trans %} From {% endtrans %} </span>
                        <div class="price">
                        {{ stay.price }}â‚¬
                        </div> 
                <a href="{{ path('reservation_configure', {'id': stay.id}) }}"
                   class="waves-effect waves-light btn mt-1"  {% if not app.user %} disabled {% endif %}>{% trans %} Configure my travel {% endtrans %}</a>
                <a href="{{ path('reservation_remove', {'id': stay.id}) }}"
                   class="waves-effect waves-light btn red darken-1 mt-1" {% if not app.user %} disabled {% endif %} >Remove</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


