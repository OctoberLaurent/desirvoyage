{% extends 'base.html.twig' %}

{% block title %}reservation{% endblock %}

{% block content %}
<h1 class= "center-align ">Futur Voyageurs</h1>
<img class= "bagage" src="/images/bagages.jpg" alt="bagage">
<div class="traveler">
    <div class="container">
            <div class="coordonne">
                <div class="row">
                    <div class="col l4">
                        <h2 class="center-align">Vos coordonnées:</h2>
                    </div>
                    <div class="col l4">
                        <div>Nom : {{app.user.lastname}}</div>
                        <div>Prénom : {{app.user.firstname}}</div>
                        <div> né le : {{app.user.birthday | date("d/m/Y")}}</div>
                        <div>telephone: {{app.user.phone}}</div>
                    </div>
                    <div class="col l4">
                        <div>adresse : {{app.user.Address}}</div>
                        <div>complément d'adresse : {{app.user.additionalAddress}}</div>
                        <div>code postale : {{app.user.postalCode}}</div>
                        <div>Ville : {{app.user.city}}</div>
                    </div>
                </div>
            </div>
             <!--lgne de séparation -->
            <div class="ligne"></div>
            <h2 class="center-align">Accompagnant </h2> 
                <div class="row">
                    <div class="col l4">
                    {{ form_start( form ) }}
                    {% for traveler in form.travelers %}
                        <div class="form-group">
                            <div>
                                <div>
                                    {{ form_widget(traveler) }}
                                    {{ form_errors(traveler) }} 
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                        {{ form_end( form ) }} 
                        <a class="waves-effect waves-light btn" type="button" id="add-traveler">ajouter des utilisateurs</a>
                    </div>
                </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{{ parent() }}{{ encore_entry_script_tags('usercollection') }}{% endblock %}
