{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
<h1 class ="center-align">Inscription</h1>
{{ form_start( form ) }} 

<div class="container">
    {{ form_start( form ) }}

    <!-- form lastname -->
   
        <div class="col">
            {{ form_label(form.lastname) }}
            <label for="autocomplete-input">
            {{ form_widget(form.lastname) }}
              <div class="errors red-text">
                {{ form_errors(form.lastname) }}
              </div>
        </div>
    
    <!-- form firstname -->
        <div class="col">
            {{ form_label(form.firstname) }}
            <label for="autocomplete-input">
            {{ form_widget(form.firstname) }}
            <div class="errors red-text">
                {{ form_errors(form.firstname) }}
            </div>     
        </div>
    <!-- form birthday -->
        <div class="col">
            {{ form_label(form.birthday) }}
            <label for="autocomplete-input">
            {{ form_widget(form.birthday) }}
            <div class="errors red-text">
                {{ form_errors(form.birthday) }}
            </div>
        </div>

    <!--form addresse -->
        <div class="col custom-address">
            <div class="input-field">
                {{ form_label(form.address) }}
                {{ form_widget(form.address)}}
            </div>
        </div>
    
    <!-- form additional address-->
        <div class="col">
            {{ form_label(form.additionalAddress) }}
            <label for="autocomplete-input">
            {{ form_widget(form.additionalAddress) }}
            <div class="errors red-text">
                {{ form_errors(form.additionalAddress) }}
            </div>
        </div>
    
    <!--form postal code -->
        <div class="col">
        <div class="input-field">
            {{ form_label(form.postalCode) }}
            {{ form_widget(form.postalCode)}}
        </div>
        </div>
    
    <!--form city -->
        <div class="col">
        <div class="input-field">
            {{ form_label(form.city) }}
            {{ form_widget(form.city)}}
            </div>
        </div>
     <!-- form country-->
        <div class="col">
            {{ form_label(form.country) }}
            <label for="autocomplete-input">
            {{ form_widget(form.country) }}
            <div class="errors red-text">
                {{ form_errors(form.country) }}
            </div>
        </div>
    <!-- form mobile-->
        <div class="col">
            {{ form_label(form.phone) }}
            <label for="autocomplete-input">
            {{ form_widget(form.phone) }}
            <div class="errors red-text">
                {{ form_errors(form.phone) }}
            </div>
        </div>
    
    <!-- form email-->
        <div class="col">
            {{ form_label(form.email) }}
            <label for="autocomplete-input">
            {{ form_widget(form.email) }}
            <div class="errors red-text">
                {{ form_errors(form.email) }}
            </div>
        </div>
    
    <!-- form password-->
        <div class="col">
            {{ form_label(form.password.first) }}
            <label for="autocomplete-input">
            {{ form_widget(form.password.first) }}
            <div class="errors red-text">
                {{ form_errors(form.password.first) }}
            </div>
        </div>
    
    <!-- form repeat password-->
        <div class="col">
            {{ form_label(form.password.second) }}
            <label for="autocomplete-input">
            {{ form_widget(form.password.second) }}
            <div class="errors red-text">
                {{ form_errors(form.password.second) }}
            </div>
        </div>
        <div class="col">
            <p>
                <label>
                {{ form_widget(form.agreeTerms) }}
                <span>J'accepte les CUG</span>
                </label>
            </p>
        </div>
        
        <div class="col">
            <button type="submit" class="btn btn-large">Inscription</button>
        </div>

    {{ form_end( form ) }} 

</div>



{% endblock %}
{% block javascripts %}{{ parent() }}{{ encore_entry_script_tags('postalcode') }}{% endblock %}