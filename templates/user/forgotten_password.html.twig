{% extends 'base.html.twig' %}



{% block title %}Mot de passe oublié {% endblock %}

{% block content %}
    <form method="post">
        <div class="forgot">
            <div class="container">
                <h1>Réinitialiser votre mot de passe</h1>
                <div class="col">
                    <div class="input-field col ">
                        <!-- E-mail -->
                        <input type="email" id="email-input" class="autocomplete " placeholder="E-mail" name="email">
                        ​ <label for="email-input">Saisissez votre adresse email pour réinitialiser votre mot de
                            passe</label>
                    </div>
                    <!--  button -->
                    <button class="btn btn-info my-4 btn-block" type="submit">Réinitialiser votre mot de passe</button>
                </div>
            </div>
        </div>
    </form>

{% endblock %}

