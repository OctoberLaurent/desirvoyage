{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
<div class="register">
    <div class="container margin-bottom">
    <h1 class="center-align">Inscription</h1>
        <div class="form">
        {{ form_start( form ) }}
            <div class="form-group">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname) }}
                <div class="errors red-text">
                {{ form_errors(form.lastname) }}
                </div>
            </div>
            <div class="form-group">
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname) }}
                <div class="errors red-text">
                {{ form_errors(form.firstname) }}
                </div>
            </div>
            <div class="form-group"> 
            {{ form_label(form.birthday) }}
            {{ form_widget(form.birthday) }}
                <div class="errors red-text">
                {{ form_errors(form.birthday) }}
                </div>
            </div>
            <div class="row custom-address">
    <div class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input type="text" id="target" class="adresse autocomplete" autocomplete="false">
          <label for="target">Adresse</label>
        </div>
      </div>
    </div>
  </div>
           
            <div class="form-group">
            {{ form_label(form.additionalAddress) }}
            {{ form_widget(form.additionalAddress) }}
                <div class="errors red-text">
                {{ form_errors(form.additionalAddress) }}
                </div>
            </div>
             <div class="col s12">
            <div class="row">
        <div class="input-field col s12">
          <input type="text" id="code" class="postalcode autocomplete">
          <label for="code">code postale</label>
        </div>
      </div>
    </div>
  </div>
       </div>
    <div class="col s12">
            <div class="row">
        <div class="input-field col s12">
          <input type="text" id="city" class="cityautocomplete">
          <label for="city">city</label>
        </div>
      </div>
    </div>
  </div>
            <div class="form-group">
            {{ form_label(form.city) }}
            {{ form_widget(form.city) }}
                <div class="errors red-text">
                {{ form_errors(form.city) }}
                </div>
            </div>
            <div class="form-group">
            
            {{ form_label(form.country) }}
            {{ form_widget(form.country) }}
                <div class="errors red-text">
                {{ form_errors(form.country) }}
                </div>
            </div>
            <div class="form-group">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone) }}
                <div class="errors red-text">
                {{ form_errors(form.phone) }}
                </div>
            </div>
            <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            </div>
                <div class="errors red-text">
                {{ form_errors(form.email) }}
                </div>  
            </div>
            <div class="form-group">
            {{ form_label(form.password.first) }}
            {{ form_widget(form.password.first) }}
                <div class="errors red-text">
                {{ form_errors(form.password.first) }}
                </div>
            </div>
            <div class="form-group">
            {{ form_label(form.password.second) }}
            {{ form_widget(form.password.second) }}
                <div class="errors red-text">
                {{ form_errors(form.password.second) }}
                </div>
            </div>
            <p>
                <label>
                    {{ form_widget(form.agreeTerms) }}
                    <span>J'accepte les CUG</span>
                </label>
            </p>
            <button type="submit" class="btn btn-large">Inscription</button>
            {{ form_end( form ) }}  
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}{{ parent() }}{{ encore_entry_script_tags('postalcode') }}{% endblock %}