{% extends 'base.html.twig' %}

{% block title %}contact us{% endblock %}

{% block content %}
<div class="container">
    <div class="contact">
        <h1 class ="center-align mt-1">{% trans %} Contact us {% endtrans %}</h1>
        <p class="center-align">Pour nous contacter, veuillez remplir ce formulaire </p>
        {{ form_start( form ) }}
        <div class="row">
            <div class="col l6">
                {{ form_label(form.lastname) }}
                <label for="autocomplete-input"/>
                    {{ form_widget(form.lastname) }}
                    <div class="errors red-text">
                        {{ form_errors(form.lastname) }}
                    </div>
            </div>
            <div class="col l6">
                {{ form_label(form.firstname) }}
                <label for="autocomplete-input"/>
                    {{ form_widget(form.firstname) }}
                    <div class="errors red-text">
                        {{ form_errors(form.firstname) }}
                    </div>
            </div>
            <div class="col l6">
                {{ form_label(form.email) }}
                <label for="autocomplete-input"/>
                    {{ form_widget(form.email) }}
                    <div class="errors red-text">
                        {{ form_errors(form.email) }}
                    </div>
            </div>
            <div class="col l12">
                {{ form_label(form.description) }}
                <label for="autocomplete-input"/>
                    {{ form_widget(form.description) }}
                    <div class="errors red-text">
                        {{ form_errors(form.description) }}
                    </div>
            </div>
        </div>
        <button type="submit" class="btn btn-large">envoyer</button>
    </div>   
        {{ form_end( form ) }}
</div>
{% endblock %}
